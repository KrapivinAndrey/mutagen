Путь = ОбъединитьПути(ТекущийСценарий().Каталог, "src", "Модули", "ПараметрыПриложения.os");
ПараметрыПриложения = ЗагрузитьСценарий(Путь);

Описание.Имя(ПараметрыПриложения.ИмяПриложения())
                .Версия(ПараметрыПриложения.Версия())
                .ВерсияСреды("1.4")
                .ЗависитОт("logos")
                .ЗависитОт("cli")
                .ЗависитОт("fs")
                .ЗависитОт("tempfiles")
                .ЗависитОт("1commands")
                .ЗависитОт("osparser")
                .ЗависитОт("coloratos")
                .РазработкаЗависитОт("1testrunner")
                .РазработкаЗависитОт("1bdd")
                .РазработкаЗависитОт("asserts")
                .ВключитьФайл("src")
                .ВключитьФайл("lib.config")
                .ВключитьФайл("README.md")
                .ВключитьФайл("LICENSE")
                .ИсполняемыйФайл("src/main.os");